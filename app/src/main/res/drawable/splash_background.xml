<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- angle表示方向角度。当angle=0时，渐变色是从左向右。
    然后逆时针方向转，当angle=90时为从下往上。-->
